class SignupSerializer:
    def __init__(self, data):
        self.data = data
        self.is_valid = False
        self.errors = {}

    def validate(self):
        if 'password' in self.data and len(self.data['password']) < 8:
            self.errors['password'] = 'Password is too weak.'
        else:
            self.is_valid = True

    def save(self):
        if not self.is_valid:
            raise Exception("Cannot save, serializer is not valid.")
        # Logic to save the user would go here

def serialize_signup(data):
    serializer = SignupSerializer(data)
    serializer.validate()
    if serializer.is_valid:
        serializer.save()
    return serializer

# Additional code for exporting the serializer
__all__ = ['SignupSerializer', 'serialize_signup']